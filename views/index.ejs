<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <h1>Authors</h1>
        <table>
            <% authors.forEach(function(author) { %>
                <tr>
                    <td>
                        <p>
                            <%= author.name %>
                        </p>
                    </td>
                    <td>
                        <form method="post" action="/authors?_method=DELETE" >
                            <input type="hidden" name="name" value="<%= author.id %>">
                            <input type="submit" name="name" value="Delete">
                        </form>
                    </td>
                </tr>
            <% }) %>
        </table>

        <h3>Add a new author</h3>
        <form action="/authors/new" method="post">
            <label for="new">Enter a new author: </label>
            <input type="text" name="new" value="">
            <input type="submit" name="name" value="Submit">
        </form>
    </body>
</html>
